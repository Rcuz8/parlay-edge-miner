{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "lib": [
            "ES2022"
        ],
        "moduleResolution": "NodeNext",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@odd/*": [
                "packages/odds-client/src/*"
            ],
            "@stats/*": [
                "packages/mlb-stats/src/*"
            ],
            "@llm/*": [
                "packages/llm-prob/src/*"
            ],
            "@engine/*": [
                "packages/parlay-engine/src/*"
            ],
            "@config/*": [
                "packages/common-config/src/*"
            ]
        }
    }
}