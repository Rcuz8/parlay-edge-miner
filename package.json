{
  "name": "parlay-edge-miner",
  "private": true,
  "packageManager": "yarn@4.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint \"**/*.{ts,tsx,js}\" --max-warnings=0",
    "build": "turbo run build",
    "test": "jest",
    "coverage": "jest --coverage",
    "dev": "turbo run dev --parallel",
    "changeset": "changeset",
    "smoke": "bash apps/edge-miner/smoke.sh"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "turbo": "^1.13.0",
    "typescript": "^5.4.0"
  }
}
